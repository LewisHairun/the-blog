{% extends 'base.html.twig' %}

{% block title %}Liste des albums{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% include "partials/sidebar.html.twig" %}
        <h3 class="mt-3">Liste des albums</h3>
        <table class="table mt-2">
            <thead class="bg-success text-white">
                <tr>
                    <th>Nom du propri√©taire</th>
                    <th>Titre</th>
                </tr>
            </thead>
            <tbody>
                {% for album in albums %}
                    <tr>
                        <td>
                            {% if album.user is defined %}
                                {{ album.user.name }}
                            {% endif %}
                        </td>
                        <td>{{ album.title }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2" class="text-center">Aucun album</td>
                    </tr>
                {% endfor %}
                {% if albums | length > 0 %}
                    <div class="pagination mt-5">
                        {{ knp_pagination_render(albums) }}
                    </div>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
