{% extends 'base.html.twig' %}

{% block title %}Liste des photos{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% include "partials/sidebar.html.twig" %}
        <h3 class="mt-3">Liste des photos</h3>
        <table class="table mt-2">
            <thead class="bg-success text-white">
                <tr>
                    <th>Album</th>
                    <th>Titre</th>
                    <th>Url</th>
                    <th>Url thumbnail</th>
                </tr>
            </thead>
            <tbody>
                {% for photo in photos %}
                    <tr>
                        <td>
                            {% if photo.album is defined %}
                                {{ photo.album.title }}
                            {% endif %}
                        </td>
                        <td>{{ photo.title }}</td>
                        <td>{{ photo.url }}</td>
                        <td>{{ photo.thumbnailUrl }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun photo</td>
                    </tr>
                {% endfor %}
                {% if photos | length > 0 %}
                    <div class="pagination mt-5">
                        {{ knp_pagination_render(photos) }}
                    </div>
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock %}
